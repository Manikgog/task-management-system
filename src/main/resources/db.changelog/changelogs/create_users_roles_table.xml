<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_roles_table_1" author="m4xin4t4@gmail.com">
        <createTable tableName="users_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int4">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="users_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="2"/>
        </insert>
        <insert tableName="users_roles">
            <column name="user_id" value="2"/>
            <column name="role_id" value="1"/>
        </insert>
        
        <addPrimaryKey tableName="users_roles" columnNames="user_id, role_id"/> 
        
        <addForeignKeyConstraint baseTableName="users_roles"
                                 baseColumnNames="user_id"
                                 constraintName="FK_users_roles.users_id->users.id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="users_roles"
                                 baseColumnNames="role_id"
                                 constraintName="FK_users_roles.role_id->roles.id"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>