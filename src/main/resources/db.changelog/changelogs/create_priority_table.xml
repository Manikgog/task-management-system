<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_priority_table_1" author="m4xin4t4@gmail.com">
        <createSequence sequenceName="priority_sequence" startValue="1" incrementBy="1"/>
        <createTable tableName="priorities">
            <column name="id" type="int4" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="priorities">
            <column name="name" value="high priority"/>
        </insert>
        <insert tableName="priorities">
            <column name="name" value="medium priority"/>
        </insert>
        <insert tableName="priorities">
            <column name="name" value="low priority"/>
        </insert>
    </changeSet>


</databaseChangeLog>